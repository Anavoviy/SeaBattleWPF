<Page x:Class="SeaBattleFreeToPlay.Views.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SeaBattleFreeToPlay.Views"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="1280"
      Title="LobbyPage">

    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Content="Поле для игр: " FontSize="24" FontWeight="Bold" />
		<Label Grid.Row="1" Content="V/S" FontSize="100" FontWeight="Black" Foreground="{StaticResource Bordoviy}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>

		<Grid Grid.Row="1">
			<Canvas Width="450" Height="450" x:Name="FieldOne"/>
		</Grid>
		<Grid Grid.Row="1" Grid.Column="2">
			<Canvas Width="450" Height="450" x:Name="FieldTwo"/>
		</Grid>
	</Grid>
</Page>
