<Window x:Class="SeaBattleFreeToPlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattleFreeToPlay"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="720" Width="1280">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="80"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Button Content="Выход" Width="100" HorizontalAlignment="Left" Margin="10" Height="30" Command="{Binding Exit}"/> 
		<Frame Grid.Row="1" Content="{Binding CurrentPage}"/>
	</Grid>
</Window>
